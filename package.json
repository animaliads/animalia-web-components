{
  "name": "@po-ds/web-components",
  "version": "1.0.0",
  "description": "Reposit√≥rio de Web Components do PODS",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "dev": "rollup -c -w",
    "start": "live-server --open=demo",
    "test": "jest --coverage",
    "test:dev": "jest --watch",
    "test:dev:all": "jest --watchAll",
    "lint": "eslint --ext .ts ./packages",
    "lint:fix": "eslint --ext .ts ./packages --fix",
    "prettier": "prettier write .",
    "prettier:check": "prettier --check .",
    "start:dev": "concurrently npm:dev npm:start",
    "publish:button": "npm publish dist/packages/pods-button --registry http://localhost:4873",
    "publish:link": "npm publish dist/packages/pods-link --registry http://localhost:4873",
    "publish:bundle": "npm publish dist/packages/pods-web-components --registry http://localhost:4873",
    "publish:all": "npm run publish:button && npm run publish:link && npm run publish:bundle",
    "build:publish": "npm run build && npm run publish:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/po-ds/pods-web-components.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/po-ds/pods-web-components/issues"
  },
  "homepage": "https://github.com/po-ds/pods-web-components#readme",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-syntax-class-properties": "^7.12.1",
    "@babel/plugin-transform-classes": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@lerna/batch-packages": "^3.16.0",
    "@lerna/filter-packages": "^3.18.0",
    "@lerna/project": "^3.21.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.6",
